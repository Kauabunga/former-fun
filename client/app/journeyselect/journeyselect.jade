md-content.journey-select(ng-class='{"fade-in": fadeIn}')

  .container.padding-right-none.padding-left-none
    .col-md-8.col-md-offset-3.col-sm-10.col-sm-offset-2.margin-top-md
      h2 Welcome to the
        span.hidden-xs &nbsp;Journey&nbsp;Creator
        span.visible-xs Journey&nbsp;Creator
      h4 Select or create a journey

      .margin-top-sm
      a.create-button(href='/journeyinline//')
        md-button.md-raised.md-primary(type='button') Create new journey


      div.journeys-container.your-journeys-container
        div.margin-top-lg
          hr
          h4 Your Journeys

        div.journeys-empty-container(ng-hide='journeys.length > 0')
          p You don't have any journeys. Create one or&nbsp;
            span(ng-hide='sharedJourneys.length > 0', ng-click='createExample()') see an example.
            span(ng-show='sharedJourneys.length > 0') copy a shared journey.

        md-list(style='min-height: 64px;')
          md-list-item(ng-repeat='journey in journeys track by $index')
            a(href='/journeyview/{{journey._formId}}')
              md-button.previous-created(type='button') {{journey.journeyTitle || journey._formId}}

            a(href='/journeyinline//{{journey._formId}}')
              md-button.action-button.md-accent.previous-created-action(type='button')
                span.hidden-xs Edit
                i.fa.fa-pencil.visible-xs

            md-button.action-button.md-warn.previous-created-action(type='button', ng-click='deleteJourney(journey)')
              span.hidden-xs Delete
              i.fa.fa-times.visible-xs
            md-button.action-button.md-primary.previous-created-action(type='button', ng-click='shareJourney(journey)')
              span.hidden-xs Share
              i.fa.fa-share.visible-xs




      div.journeys-container.shared-journeys-container(ng-class='{"fade-in": sharedJourneys && sharedJourneys.length > 0}')
        div.margin-top-md
          hr
          h4 Shared Journeys

        md-list
          md-list-item(ng-repeat='journey in sharedJourneys track by $index')
            a(href='/journeyview/{{journey._formId}}')
              md-button.previous-created(type='button') {{journey.journeyTitle || journey._formId}}

            a(href='/journeyinline//{{journey._formId}}')
              md-button.action-button.md-accent.previous-created-action(type='button')
                span.hidden-xs Edit
                i.fa.fa-pencil.visible-xs

            md-button.action-button.md-warn.previous-created-action(type='button', ng-click='deleteSharedJourney(journey)')
              span.hidden-xs Delete
              i.fa.fa-times.visible-xs
            md-button.action-button.md-primary.previous-created-action(type='button', ng-click='copyJourney(journey)')
              span.hidden-xs Copy
              i.fa.fa-copy.visible-xs




      div.margin-top-sm.padding-bottom-md
