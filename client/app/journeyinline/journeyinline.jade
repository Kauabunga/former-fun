md-content.journey-inline-view

  .container
    .col-sm-8
      a(href='/journeyview/{{currentId}}')
        h4.edit-title Journey Edit

  .journey-wrapper(ng-class='{"fade-in": fadeIn}')

    .journey-container
      panzoom(config="config" model="model" style="{{panStyle}}")
        former.former-container(form-controls='formControls', form-definition='formDefinition',
          form-model='journey', form-section-state-param='currentSection',
          form-id-state-param='currentId', form-submit='submitForm')



  a(href='/journeyselect')
    md-button.md-fab.home-button(type='button')
      md-icon(md-svg-icon='/assets/images/ic_home_24px.svg')

  a(href='/journeyview/{{currentId}}')
    md-button.md-fab.edit-button.presentation-view(type='button', ng-click='gotoEditor()')
      md-icon(md-svg-icon='/assets/images/ic_eye_24px.svg')

  a(href='/journeyedit/start/{{currentId}}')
    md-button.md-fab.edit-button-full(type='button', ng-click='gotoEditor()')
      md-icon(md-svg-icon='/assets/images/ic_list_24px.svg')
